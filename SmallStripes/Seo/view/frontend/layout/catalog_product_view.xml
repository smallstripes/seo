<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="itemtype" remove="true" ifconfig="smallstripes_seo/general/enabled"/>
        <attribute name="itemscope" remove="true" ifconfig="smallstripes_seo/general/enabled"/>
        <referenceContainer name="content">
            <block class="SmallStripes\Seo\Block\RichSnippets\Product" name="smallstripes.seo.richsnippets.product" template="richsnippets/product.phtml" />
        </referenceContainer>
        <referenceBlock name="product.info.review" >
            <arguments>
                <argument name="template" xsi:type="string">SmallStripes_Seo::review/helper/summary.phtml</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name='copyright'>
            <action method='setTemplate'>
                <argument name='template' xsi:type='string'>Dfr_Backend::page/copyright.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="product.price.final">
            <arguments>
                <argument name="zone" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>